<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"


    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <RelativeLayout android:id="@+id/rlSearchFrameDelete2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            >

            <EditText android:id="@+id/etSearch2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:background="@drawable/search_frame"
                android:layout_marginRight="5dp"
                android:paddingLeft="34dp"
                android:textSize="15sp"
                android:hint="Searching..."/>

            <ImageView android:id="@+id/ivDeleteText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/delete"
                android:layout_centerInParent="true"
                android:paddingRight="20dp"

                android:visibility="gone"/>

        </RelativeLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:id="@+id/zuzhi_sv"
            android:layout_marginTop="10dip"
            >
            <com.wgz.ant.myappframework.view.ScrollListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1px"
                android:id="@+id/list_1_1"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:divider="@color/colorPrimaryDark"
                ></com.wgz.ant.myappframework.view.ScrollListView>


        </android.support.v4.widget.NestedScrollView>
        <ProgressBar
            android:id="@+id/frag1_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:id="@+id/zuzhi_sv2"
            android:layout_marginTop="10dip"
            >
            <com.wgz.ant.myappframework.view.ScrollListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1px"
                android:id="@+id/list_1_2"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:divider="@color/colorPrimaryDark"
                ></com.wgz.ant.myappframework.view.ScrollListView>


        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>